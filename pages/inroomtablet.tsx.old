  const [showCart, setShowCart] = useState(false);
  const [housekeepingRequests, setHousekeepingRequests] = useState<HousekeepingRequest[]>([]);
  const [maintenanceReports, setMaintenanceReports] = useState<MaintenanceIssue[]>([]);
