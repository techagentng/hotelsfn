                  <p className="text-sm text-gray-600">Paid Amount</p>
                  <p className="text-lg font-semibold text-green-600">${mockReservation.paidAmount}</p>
                </div>

                <div className="pt-4 border-t">
                  <div className="flex items-center text-green-600 font-semibold">
                    <CheckCircle size={20} className="mr-2" />
                    Payment Complete
                  </div>
                </div>
              </div>

              <button className="w-full bg-indigo-600 text-white py-3 rounded-lg hover:bg-indigo-700 transition-colors font-bold">
                Need Help?
              </button>
            </div>
          </div>
        )}
      </div>

      {/* Confirmation Messages */}
      {showOrderConfirmation && (
        <div className="fixed bottom-6 right-6 bg-green-500 text-white px-6 py-4 rounded-lg shadow-lg flex items-center space-x-3 animate-pulse">
          <CheckCircle size={24} />
          <span className="font-semibold">Order placed successfully!</span>
        </div>
      )}

      {showHousekeepingConfirmation && (
        <div className="fixed bottom-6 right-6 bg-green-500 text-white px-6 py-4 rounded-lg shadow-lg flex items-center space-x-3 animate-pulse">
          <CheckCircle size={24} />
          <span className="font-semibold">Request sent to housekeeping!</span>
        </div>
      )}

      {showMaintenanceConfirmation && (
        <div className="fixed bottom-6 right-6 bg-green-500 text-white px-6 py-4 rounded-lg shadow-lg flex items-center space-x-3 animate-pulse">
          <CheckCircle size={24} />
          <span className="font-semibold">Maintenance issue reported!</span>
        </div>
      )}
    </div>
  );
}
