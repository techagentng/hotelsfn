  const [showHousekeepingConfirmation, setShowHousekeepingConfirmation] = useState(false);
  const [showMaintenanceConfirmation, setShowMaintenanceConfirmation] = useState(false);

  const addToCart = (item: MenuItem) => {
    const existingItem = cart.find(c => c.id === item.id);
    if (existingItem) {
      setCart(cart.map(c => c.id === item.id ? { ...c, quantity: c.quantity + 1 } : c));
    } else {
      setCart([...cart, { ...item, quantity: 1 }]);
    }
  };

  const removeFromCart = (itemId: string) => {
    setCart(cart.filter(c => c.id !== itemId));
  };

  const updateQuantity = (itemId: string, quantity: number) => {
    if (quantity <= 0) {
      removeFromCart(itemId);
    } else {
      setCart(cart.map(c => c.id === itemId ? { ...c, quantity } : c));
    }
  };

  const cartTotal = cart.reduce((sum, item) => sum + item.price * item.quantity, 0);

  const handleRequestHousekeeping = (type: string, description: string) => {
    const newRequest: HousekeepingRequest = {
      id: `hk-${Date.now()}`,
      type: type as 'cleaning' | 'linens' | 'schedule',
      description,
      status: 'pending',
    };
    setHousekeepingRequests([...housekeepingRequests, newRequest]);
    setShowHousekeepingConfirmation(true);
    setTimeout(() => setShowHousekeepingConfirmation(false), 3000);
  };

  const handleReportMaintenance = () => {
    if (selectedMaintenance && maintenanceDescription) {
      const newIssue: MaintenanceIssue = {
        id: `mt-${Date.now()}`,
        type: selectedMaintenance,
        description: maintenanceDescription,
        status: 'reported',
        priority: 'high',
      };
      setMaintenanceReports([...maintenanceReports, newIssue]);
      setSelectedMaintenance(null);
      setMaintenanceDescription('');
      setShowMaintenanceConfirmation(true);
      setTimeout(() => setShowMaintenanceConfirmation(false), 3000);
    }
  };

  const handlePlaceOrder = () => {
    setShowOrderConfirmation(true);
    setTimeout(() => {
      setShowOrderConfirmation(false);
      setCart([]);
      setShowCart(false);
    }, 3000);
